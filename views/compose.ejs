<%- include("partials/header") -%>

<h1>Compose</h1>

<form class="" action="/compose" method="post">
  <div class="mb-3">
    <label for="postTitle" class="form-label">Title</label>
    <input type="text" class="form-control" id="postTitle" name="postTitle">
  </div>
  <div class="mb-3">
    <label for="postBody" class="form-label">Post</label>
    <textarea class="form-control" id="postBody" rows="3" name="postBody"></textarea>
  </div>
  <button type="submit" class="btn btn-primary button-top">Publish</button>
</form>

<%- include("partials/footer") -%>
